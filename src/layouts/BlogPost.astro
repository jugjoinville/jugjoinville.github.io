---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="max-w-3xl mx-auto">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-java-orange mb-4">{frontmatter.title}</h1>
      <div class="flex items-center text-gray-400 space-x-4">
        <time datetime={frontmatter.date}>
          {new Date(frontmatter.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
        <span>Â·</span>
        <span>{frontmatter.author}</span>
      </div>
    </header>

    <div class="prose prose-invert max-w-none">
      <slot />
    </div>
  </article>
</Layout>

<style is:global>
  .prose pre {
    @apply bg-gray-900 p-4 rounded-lg my-4;
  }
  
  .prose code {
    @apply font-mono text-sm;
  }
  
  .prose h2 {
    @apply text-2xl font-bold text-java-blue mt-8 mb-4;
  }
  
  .prose p {
    @apply mb-4 text-gray-300;
  }

  .prose a {
    @apply text-java-orange hover:text-java-blue transition-colors;
  }

  .prose ul {
    @apply list-disc list-inside text-gray-300;
  }

  .prose li {
    @apply mb-2;
  }
</style>